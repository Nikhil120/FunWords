<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nikhil.funwords.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category:"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />

    <Button
        android:id="@+id/jumble"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Jumbled Words"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="156dp"
        android:background="@color/buttonColor"
        android:textColor="#ffffff"
        android:layout_marginTop="109dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:onClick="jumble" />

    <Button
        android:id="@+id/incomplete"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/buttonColor"
        android:textColor="#ffffff"
        android:layout_below="@+id/jumble"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:text="Incomplete Words"
        android:onClick="incomplete" />

</RelativeLayout>
